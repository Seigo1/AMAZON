<div class="container mb-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">チャージ</div>
        <div class="card-body">
          <%= form_with model: @user,:url => {:action => :charge}, local:true do |f| %>
            <div class="mb-3">
              <%= f.label "チャージ金額", class: "form-label" %>
              <%= f.text_field :amount, class: "form-control", name: "amount", pattern: "[0-9]+(\.[0-9]{1,2})?", required: true %>
            </div>
            <div class="text-center">
              <%= f.submit 'チャージ', class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>